# ===========================================
# PALYRENET BACKEND ENVIRONMENT VARIABLES
# ===========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# -----------------
# Application
# -----------------
NODE_ENV="development"  # Options: development, production, test
PORT=3001

# -----------------
# Database
# -----------------
# For production, use a strong password and secure connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://palyrenet:palyrenet123@localhost:5432/palyrenet_db?schema=public"

# -----------------
# JWT Authentication
# -----------------
# CRITICAL: Change these in production! Use a strong random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-use-long-random-string"
JWT_EXPIRES_IN="7d"

# -----------------
# CORS & Frontend
# -----------------
# The URL(s) of your frontend application
FRONTEND_URL="http://localhost:5173"

# -----------------
# Redis (Optional)
# -----------------
# Used for caching and real-time features
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""  # Leave empty if no password

# -----------------
# File Upload
# -----------------
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# -----------------
# Email (Optional - for future use)
# -----------------
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@palyrenet.com"

# -----------------
# OAuth (Optional - for social login)
# -----------------
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# MICROSOFT_CLIENT_ID="your-microsoft-client-id"
# MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# -----------------
# Production Notes
# -----------------
# 1. Generate strong JWT_SECRET using crypto.randomBytes
# 2. Use SSL/TLS for database connections in production
# 3. Set NODE_ENV=production for optimized performance
# 4. Configure proper CORS origins (no wildcards in production)
# 5. Enable rate limiting and request throttling
# 6. Use environment-specific .env files (.env.production)
# 7. Never expose this file or .env in public repositories
